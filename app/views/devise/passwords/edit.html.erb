<div class="row">
<div class="col-12 col-md-6">

<h2 class="text-white fs-3 my-3 fw-bold">Change your password</h2>

<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= f.error_notification %>

  <%= f.input :reset_password_token, label_html: {class:"text-white my-2"}, as: :hidden %>
  <%= f.full_error :reset_password_token %>

  <div class="form-inputs">
    <%= f.input :password,
                label: "New password",
                autofocus: true,
                hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                input_html: { autocomplete: "new-password" },
                label_html: {class:"text-white my-2"} %>
    <%= f.input :password_confirmation,
                label: "Confirm your new password",
                input_html: { autocomplete: "new-password" },
                label_html: {class:"text-white my-2"} %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Change my password",class:"btn btn-dark my-2" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>

</div>
</div>
