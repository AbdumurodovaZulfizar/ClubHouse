<div class="row">
  <div class="col-12 col-md-6">
    <h2 class="text-white fs-3 fw-bold my-2">Log in</h2>

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs">
      <%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email" },
                label_html: {class:"text-white my-2"} %>
      <%= f.input :password,
                required: false,
                input_html: { autocomplete: "current-password" },
                 label_html: {class:"text-white my-2"}%>
      <%= f.input :remember_me,label_html: {class:"text-white"},  as: :boolean if devise_mapping.rememberable?
    %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Log in", class:'btn btn-dark my-2' %>
    </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
